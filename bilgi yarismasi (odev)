#Aybike bilgi yarışmasında

ad=input("Merhaba adınızı öğrenebilir miyim?")
print(f"Merhaba {ad}")

Evet=input("Yarışmamız beş sorudan oluşmaktadır başlayalım mı?")
print(f"{Evet} demene sevindim o zaman yarışmamıza başlıyoruz.")

Sair=input("Cahit Sıtkı Tarancı kimdir?")
print(f"Evet cevabımız {Sair} doğru cevabı vererek 10 puan kazandınız.")

Malazgirt=input("1071 yılında yapılan hangi savaş Anadolu kapılarının Türklere açılmasını sağlamıştır?")
print(f"{Malazgirt} doğru cevap tebrik ederim 15 puan daha kazandınız.Toplam puanınıza bakalım.")

sayi1=int(input("Birinci soruda kazandığınız puanı giriniz:"))
sayi2=int(input("İkinci soruda kazandığınız puanı giriniz:"))

print(f"Toplam {sayi1 + sayi2} puana sahipsiniz.Diğer soruya geçelim.")

Ekvator=input("Kuzey ve Güney yarımkürelerin birleştiği hayali çizgiye ne ad verilir?")
print(f"Tebrikler {Ekvator} cevabını vererek 20 puan kazandınız.Toplam puanınıza bakalım.")

sayi1=int(input("Toplam puanınızı giriniz:"))
sayi2=int(input("Üçüncü soruda kazandığınız puanı giriniz:"))

print(f"Toplam {sayi1 + sayi2} puana sahipsiniz.Diğer soruya geçelim.")

Avicenna=input("Tıp alanında önemli çalışmalar yapmış olan İbn-i Sina Batı'da ne ad ile tanınmaktadır?")
print(f"Doğru cevap {Avicenna}. Tebrikler 25 puan kazandınız.")

sayi1=int(input("Toplam puanınızı giriniz:"))
sayi2=int(input("Dördüncü soruda kazandığınız puanı giriniz:"))

print(f"Toplam {sayi1 + sayi2} puana sahipsiniz.Diğer soruya geçelim.")

Yaren=input("Bursalı Adem Amca'yı her yıl ziyaret eden leyleğin adı nedir?")
print(f"{Yaren} cevabını vererek 30 puan daha kazandınız.Tebrikler yarışmamız bitmiştir.Şimdi toplam puanınıza bakalım.")

sayi1=int(input("Toplam puanınızı giriniz:"))
sayi2=int(input("Beşinci soruda kazandığınız puanı giriniz:"))

print(f"Toplam {sayi1 + sayi2} puana sahipsiniz.Yarışmamız bitmiştir, tebrik ederim.")

Tesekkurler=input("100 puan kazanarak yarışmamızı birincilikle bitirdiniz.")
print(f"Yarışmamıza katıldığınız için {Tesekkurler} hoşça kalın.")
